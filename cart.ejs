<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <title>Cart</title>
    <link rel="stylesheet" href="cart.css">
    
</head>
<body>
    <div class="shopping-list">
        <div class="heading">
            <h3 style="margin-left: 2.5%; font-size: 35px;">Shopping List</h3>
           <div class="bottomBorder"><p>Price</p></div>
        </div>
        <% items.forEach((item)=>{ %>
            
        <div class="list">
            <ul>
                <li>
                    <div class="checkbox">
                    <input type="checkbox" name="checkbox">
                    </div>

                <div class="item-img">
                    <img src="./book-images/<%= item.ImageSrc %>" alt="test__image">
                </div>

                <div class="description">
                    <p class="name"><%= item.Name %></p>
                    <p class="seller"><%= item.publisher %></p>
                    <p class="tag"><%= item.tag %></p>
                   <form action="/delete/<%= item._id %>" method="post">
                       <input type="submit" value="Remove" name="remove" class="removeFromCart">
                   </form>
                </div>

                <div class="price">
                    <p class="price">$<%= item.price %></p>
                </div>
                </li>
            </ul>
        </div>
        <% }); %>
        <div class="total" style="border-top: 1px solid gray;">
            <h4 style="display: inline-block; margin-right: 5px; margin-left: 10px;">Total:</h4>
            <% var sum = 0; %>
            <% items.forEach((item)=>{ %>
                <% sum = item.price + sum %>
            <% }) %>
            $<%= sum %>
            <div class="deliver">
                <button class="Deliver">Deliver</button>
            </div>
        </div>
        <div class="go-to-book">
            <a href="/book"><button class="gotobook">Back</button></a>
        </div>
    </div>
</body>
</html>